<div class='devise-views'>
  <div class='hero'>
    <div class='hero-body'>
      <h2 class='is-size-3 mb-5'>Sign Up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name, class: "label" %>
          <p class="control">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "John Doe", class: "input" %>
          </p>
        </div>

        <div class="field">
          <%= f.label :email, class: "label" %>
          <p class="control">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "johndoe@mail.com", class: "input" %>
          </p>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <p class="control">
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "123456", class: "input" %>
          </p>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <p class="control">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "123456", class: "input" %>
          </p>
        </div>

        <div class="field">
          <p class="control">
            <%= f.submit "Sign Up", class: "button is-success mt-5" %>
          </p>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>